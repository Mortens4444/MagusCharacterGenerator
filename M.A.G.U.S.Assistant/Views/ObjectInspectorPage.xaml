<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:v="clr-namespace:M.A.G.U.S.Assistant.Views"
             xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
             x:Class="M.A.G.U.S.Assistant.Views.ObjectInspectorPage"
             Title="Object Inspector">

    <v:NotifierPage.BindingContext>
        <vm:ObjectInspectorViewModel />
    </v:NotifierPage.BindingContext>

    <CollectionView ItemsSource="{Binding Properties}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*,2*"
                      Padding="4"
                      RowSpacing="4"
                      ColumnSpacing="8">
                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                    <Label Text="{Binding Value}" Grid.Column="1" LineBreakMode="WordWrap" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</v:NotifierPage>
