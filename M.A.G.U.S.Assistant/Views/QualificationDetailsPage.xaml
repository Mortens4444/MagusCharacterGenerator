<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:c="clr-namespace:Mtf.LanguageService.MAUI.Converters;assembly=Mtf.LanguageService.MAUI"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:v="clr-namespace:Mtf.LanguageService.MAUI.Views;assembly=Mtf.LanguageService.MAUI"
                xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
                xmlns:conv="clr-namespace:Mtf.Maui.Controls.Converters;assembly=Mtf.Maui.Controls"
                x:Class="M.A.G.U.S.Assistant.Views.QualificationDetailsPage"
                x:DataType="vm:QualificationDetailsViewModel"
                x:ClassModifier="internal"
                Title="{Binding Name}">

    <v:NotifierPage.Resources>
        <ResourceDictionary>
            <c:TranslationConverter x:Key="TranslationConverter" />
            <conv:StringNotNullOrEmptyConverter x:Key="NotNullOrEmpty" />
        </ResourceDictionary>
    </v:NotifierPage.Resources>

    <ScrollView>
        <StackLayout Padding="12" Spacing="12">

            <Border Padding="12" Stroke="#E6E6E6">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="8">

                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="6">
                        <Label Text="{Binding Category}" FontAttributes="Bold" />
                        <Label Text="{Binding Name}" FontAttributes="Bold" />
                        <HorizontalStackLayout>
                            <Label Text="{Binding RequiredSp}" />
                            <Label Text="SP" Margin="5,0,0,0" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <Border Grid.Row="0" Grid.Column="1" Padding="6" Stroke="#E6E6E6"
                            StrokeShape="RoundRectangle 10" VerticalOptions="Start" HorizontalOptions="End">
                        <Image Source="{Binding ImageName}" Aspect="AspectFit" WidthRequest="120" HeightRequest="120" />
                    </Border>

                    <Picker Title="Level" Grid.Row="1" ItemsSource="{Binding AvailableLevels}" SelectedItem="{Binding SelectedLevel, Mode=TwoWay}"
                            ItemDisplayBinding="{Binding ., Converter={StaticResource TranslationConverter}}" WidthRequest="220" HorizontalOptions="Start" />
                    
                    <Label Grid.Row="2" Grid.Column="0" Text="{Binding Description}" LineBreakMode="WordWrap"
                           IsVisible="{Binding Description, Converter={StaticResource NotNullOrEmpty}}" />

                    <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" Spacing="12" Margin="0,8,0,0">
                        <Button Text="{Binding LearnButtonText}" Command="{Binding LearnCommand}" CornerRadius="10">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding CanLearn}" Value="False">
                                    <Setter Property="IsVisible" Value="False" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>

                        <Button Text="Close" Command="{Binding CloseCommand}" CornerRadius="10" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>

        </StackLayout>
    </ScrollView>
</v:NotifierPage>
