<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:v="clr-namespace:M.A.G.U.S.Assistant.Views"
                xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
                xmlns:cls="clr-namespace:M.A.G.U.S.Classes;assembly=M.A.G.U.S."
                xmlns:mc="clr-namespace:Mtf.Maui.Controls;assembly=Mtf.Maui.Controls"
                xmlns:local="clr-namespace:M.A.G.U.S.Qualifications;assembly=M.A.G.U.S."
                xmlns:q="clr-namespace:M.A.G.U.S.GameSystem.Qualifications;assembly=M.A.G.U.S."
                x:Class="M.A.G.U.S.Assistant.Views.ClassesPage"
                x:DataType="vm:ClassesViewModel"
                Title="Classes">

    <v:NotifierPage.BindingContext>
        <vm:ClassesViewModel />
    </v:NotifierPage.BindingContext>

    <Grid Padding="10" RowSpacing="8" ColumnSpacing="8" RowDefinitions="Auto,*">
        <!-- Search -->
        <mc:EntryWithLabel Grid.Row="0" Label="Search" Text="{Binding SearchText}" />

        <!-- Content: kétoszlopos (lista | részletek) -->
        <Grid Grid.Row="1" ColumnDefinitions="*,2*" ColumnSpacing="8">
            <!-- Lista -->
            <CollectionView Grid.Column="0"
                            ItemsSource="{Binding FilteredClasses}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedClass, Mode=TwoWay}"
                            VerticalOptions="FillAndExpand"
                            ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="cls:Class">
                        <Border Stroke="Gray" StrokeThickness="1" Padding="8" Margin="0,4">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="8">
                                <Label Text="{Binding ClassName}" FontAttributes="Bold" Grid.Column="0" Grid.Row="0"/>
                                <Label Text="Lv. {Binding Level}" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="End"/>
                                <Label Text="{Binding Name}" Grid.Column="0" Grid.Row="1" FontSize="12" LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding Gold}" Grid.Column="1" Grid.Row="1" HorizontalOptions="End" FontSize="12"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Részletek -->
            <ScrollView Grid.Column="1" VerticalOptions="FillAndExpand">
                <Border Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"
                        StrokeThickness="1" Padding="10" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                    <StackLayout Spacing="8">
                        <Label Text="{Binding SelectedClass.ClassName}" FontSize="20" FontAttributes="Bold"/>
                        <Label Text="{Binding SelectedClass.Name}" FontSize="16"/>
                        <Grid ColumnDefinitions="Auto,Auto" RowSpacing="6" ColumnSpacing="12">
                            <Label Text="Level:" Grid.Row="0" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Level}" Grid.Row="0" Grid.Column="1"/>
                            <Label Text="Gold:" Grid.Row="1" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Gold}" Grid.Row="1" Grid.Column="1"/>
                            <Label Text="Bravery:" Grid.Row="2" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Bravery}" Grid.Row="2" Grid.Column="1"/>
                            <Label Text="Erudition:" Grid.Row="3" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Erudition}" Grid.Row="3" Grid.Column="1"/>
                            <Label Text="Initiating base:" Grid.Row="4" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.InitiatingBaseValue}" Grid.Row="4" Grid.Column="1"/>
                            <Label Text="Attacking base:" Grid.Row="5" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.AttackingBaseValue}" Grid.Row="5" Grid.Column="1"/>
                            <Label Text="Defending base:" Grid.Row="6" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.DefendingBaseValue}" Grid.Row="6" Grid.Column="1"/>
                            <Label Text="Aiming base:" Grid.Row="7" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.AimingBaseValue}" Grid.Row="7" Grid.Column="1"/>
                            <Label Text="Base life points:" Grid.Row="8" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.BaseLifePoints}" Grid.Row="8" Grid.Column="1"/>
                            <Label Text="Base Ptp:" Grid.Row="9" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.BasePainTolerancePoints}" Grid.Row="9" Grid.Column="1"/>
                        </Grid>

                        <Label Text="Stats" FontAttributes="Bold" Margin="0,8,0,0"/>
                        <Grid ColumnDefinitions="Auto,Auto" RowSpacing="6">
                            <Label Text="Strength:" Grid.Row="0" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Strength}" Grid.Row="0" Grid.Column="1"/>
                            <Label Text="Speed:" Grid.Row="1" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Speed}" Grid.Row="1" Grid.Column="1"/>
                            <Label Text="Dexterity:" Grid.Row="2" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Dexterity}" Grid.Row="2" Grid.Column="1"/>
                            <Label Text="Stamina:" Grid.Row="3" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Stamina}" Grid.Row="3" Grid.Column="1"/>
                            <Label Text="Health:" Grid.Row="4" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Health}" Grid.Row="4" Grid.Column="1"/>
                            <Label Text="Beauty:" Grid.Row="5" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Beauty}" Grid.Row="5" Grid.Column="1"/>
                            <Label Text="Intelligence:" Grid.Row="6" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Intelligence}" Grid.Row="6" Grid.Column="1"/>
                            <Label Text="WillPower:" Grid.Row="7" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.WillPower}" Grid.Row="7" Grid.Column="1"/>
                            <Label Text="Astral:" Grid.Row="8" Grid.Column="0"/>
                            <Label Text="{Binding SelectedClass.Astral}" Grid.Row="8" Grid.Column="1"/>
                        </Grid>

                        <Border Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"
                            StrokeThickness="1" Padding="10" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Qualifications" FontAttributes="Bold"/>
                                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10" Padding="6">
                                    <Label Text="Name" VerticalOptions="Center" TextColor="Gray" FontAttributes="Bold"/>
                                    <Label Text="Level" VerticalOptions="Center" Grid.Column="1" HorizontalOptions="End" TextColor="Gray" FontAttributes="Bold"/>
                                </Grid>
                                <CollectionView ItemsSource="{Binding SelectedClass.Qualifications}" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="local:Qualification">
                                            <Grid Padding="6" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                                <Label Text="{Binding Name, Converter={StaticResource TranslationConverter}}" VerticalOptions="Center" HorizontalOptions="Start" />
                                                <Label Text="{Binding QualificationLevel, Converter={StaticResource TranslationConverter}}" VerticalOptions="Center" Grid.Column="1" HorizontalTextAlignment="End" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Border>

                        <Border Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"
                            StrokeThickness="1" Padding="10" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Percentage qualifications" FontAttributes="Bold"/>
                                <Grid Padding="6" ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                    <Label Text="Name" VerticalOptions="Center" TextColor="Gray" FontAttributes="Bold"/>
                                    <Label Text="%" VerticalOptions="Center" Grid.Column="1" HorizontalOptions="End" TextColor="Gray" FontAttributes="Bold"/>
                                </Grid>
                                <CollectionView ItemsSource="{Binding SelectedClass.PercentQualifications}" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="local:PercentQualification">
                                            <Grid Padding="6" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                                <Label Text="{Binding Name, Converter={StaticResource TranslationConverter}}" VerticalOptions="Center" HorizontalOptions="Start" />
                                                <Label Text="{Binding Percent}" VerticalOptions="Center" Grid.Column="1" HorizontalTextAlignment="End" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Border>

                        <Border Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"
                            StrokeThickness="1" Padding="10" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Special qualifications" FontAttributes="Bold"/>
                                <Grid Padding="6" ColumnDefinitions="*" ColumnSpacing="10">
                                    <Label Text="Name" VerticalOptions="Center" TextColor="Gray" FontAttributes="Bold"/>
                                </Grid>
                                <CollectionView ItemsSource="{Binding SelectedClass.SpecialQualifications}" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="q:SpecialQualification">
                                            <Grid Padding="6" ColumnDefinitions="*" ColumnSpacing="10">
                                                <Label Text="{Binding Name, Converter={StaticResource TranslationConverter}}" VerticalOptions="Center" HorizontalOptions="Start" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Border>

                    </StackLayout>
                </Border>
            </ScrollView>
        </Grid>
    </Grid>
</v:NotifierPage>
