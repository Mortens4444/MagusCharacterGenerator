<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:c="clr-namespace:Mtf.LanguageService.MAUI.Converters;assembly=Mtf.LanguageService.MAUI"
             xmlns:conv="clr-namespace:Mtf.Maui.Controls.Converters;assembly=Mtf.Maui.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:M.A.G.U.S.Assistant.Models"
             xmlns:mc="clr-namespace:Mtf.Maui.Controls;assembly=Mtf.Maui.Controls"
             xmlns:v="clr-namespace:M.A.G.U.S.Assistant.Views"
             xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
             x:Class="M.A.G.U.S.Assistant.Views.SearchListPage"
             x:ClassModifier="internal"
             x:DataType="vm:SearchListViewModel">

    <v:NotifierPage.Resources>
        <ResourceDictionary>
            <c:TranslationConverter x:Key="TranslationConverter" />
            <c:EnumDescriptionTranslationConverter x:Key="EnumDescriptionTranslationConverter" />
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" EnabledColor="White" DisabledColor="#888888" />
        </ResourceDictionary>
    </v:NotifierPage.Resources>

    <Grid RowDefinitions="Auto, *, Auto" Padding="10" RowSpacing="8">

        <StackLayout Orientation="Vertical" Spacing="8" Grid.Row="0">

            <Grid VerticalOptions="Center" ColumnDefinitions="*, Auto, Auto, Auto, Auto">
                <Entry Grid.Column="0" Text="{Binding SearchText}" Placeholder="Search…" />
                <Button Grid.Column="1" Text="Clear" Command="{Binding ClearCommand}" />
                <Picker Grid.Column="2" Title="Category…" ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}" WidthRequest="150"
                        ItemDisplayBinding="{Binding ., Converter={StaticResource EnumDescriptionTranslationConverter}}" />

                <CheckBox Grid.Column="3" IsChecked="{Binding ShowOnlyAffordable}" VerticalOptions="End" HorizontalOptions="Center" IsVisible="{Binding IsCharacterSet}" />
                <Label Grid.Column="3" Text="Affordable" FontSize="12" HorizontalOptions="Center" VerticalOptions="Start" IsVisible="{Binding IsCharacterSet}" />

                <mc:NumericUpDownWithLabel Grid.Column="4" Label="Price Multiplier"
                                           Minimum="0.0" Maximum="10.0" Increment="0.1"
                                           Value="{Binding PriceMultiplier}" 
                                           WidthRequest="160" DecimalPlaces="1" />

            </Grid>

        </StackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding FilteredItems}" SelectionMode="Single" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:DisplayItem">
                    <Border Stroke="Gray" StrokeThickness="1" Padding="8" Margin="0,4">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8" VerticalOptions="Center">
                            <StackLayout>
                                <Label Text="{Binding Title, Converter={StaticResource TranslationConverter}}" FontAttributes="Bold"
                                       TextColor="{Binding Enabled, Converter={StaticResource BoolToColorConverter}}" />
                                <Label Text="{Binding Subtitle, Converter={StaticResource TranslationConverter}}" FontSize="12" LineBreakMode="TailTruncation"
                                       TextColor="{Binding Enabled, Converter={StaticResource BoolToColorConverter}}" />
                            </StackLayout>
                            <Label Text="{Binding RightText}" VerticalOptions="Center" Grid.Column="1" FontAttributes="Bold"
                                   TextColor="{Binding Enabled, Converter={StaticResource BoolToColorConverter}}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</v:NotifierPage>
