<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:v="clr-namespace:M.A.G.U.S.Assistant.Views"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:mc="clr-namespace:Mtf.Maui.Controls;assembly=Mtf.Maui.Controls"
                xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
                x:Class="M.A.G.U.S.Assistant.Views.DiceRollPage"
                Title="Dice roll">

    <v:NotifierPage.BindingContext>
        <vm:DiceRollViewModel />
    </v:NotifierPage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="16" RowSpacing="12">
        <Label Text="Choose a dice roll type" FontAttributes="Bold" Grid.Row="0" />

        <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
            <mc:NumericUpDownWithLabel x:Name="DiceCounter"
                                       Grid.Column="0"
                                       Label="Number of dices"
                                       Minimum="1"
                                       Maximum="10"
                                       Value="{Binding DiceCount}" />

            <Picker x:Name="DicePicker"
                    Grid.Column="1"
                    ItemsSource="{Binding DiceType}"
                    SelectedItem="{Binding SelectedDice}"
                    VerticalTextAlignment="Center"
                    Title="K6, K10, 2K6..." />

            <Button Text="Throw"
                    Grid.Column="2"
                    Command="{Binding RollCommand}"
                    WidthRequest="120" />
        </Grid>

        <ScrollView Grid.Row="3">
            <StackLayout Spacing="8">
                <Label Text="Summary"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       FontSize="20" />
                <Label Text="{Binding ResultSummary}"
                       HorizontalOptions="Center"
                       FontSize="24"
                       FontAttributes="Bold" />

                <Label Text="Details"
                       FontAttributes="Bold"
                       Margin="0,12,0,0" />
                <Label Text="{Binding ResultDetails}"
                       LineBreakMode="WordWrap" />
            </StackLayout>
        </ScrollView>

        <Grid Grid.Row="4" VerticalOptions="End" HeightRequest="200">
            <Image x:Name="DiceImage" Source="dice.png" Aspect="AspectFit" HorizontalOptions="Fill" VerticalOptions="Fill" />
        </Grid>
    </Grid>
</v:NotifierPage>
