<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:v="clr-namespace:Mtf.LanguageService.MAUI.Views;assembly=Mtf.LanguageService.MAUI"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:mc="clr-namespace:Mtf.Maui.Controls;assembly=Mtf.Maui.Controls"
                xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
                xmlns:enum="clr-namespace:M.A.G.U.S.Enums;assembly=M.A.G.U.S."
                xmlns:conv="clr-namespace:Mtf.LanguageService.MAUI.Converters;assembly=Mtf.LanguageService.MAUI"
                x:Class="M.A.G.U.S.Assistant.Views.DiceRollPage"
                x:ClassModifier="internal"
                x:DataType="vm:DiceRollViewModel"
                Title="Dice roll">

    <v:NotifierPage.Resources>
        <ResourceDictionary>
            <conv:EnumDescriptionTranslationConverter x:Key="EnumDescriptionTranslationConverter" />
        </ResourceDictionary>
    </v:NotifierPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <Grid Grid.Row="0" 
              RowDefinitions="Auto, Auto" 
              ColumnDefinitions="Auto,*,Auto" 
              ColumnSpacing="8" 
              RowSpacing="12">

            <mc:NumericUpDownWithLabel x:Name="DiceCounter"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Label="Count"
                                       Minimum="1"
                                       Maximum="10"
                                       Value="{Binding DiceCount}" />

            <Picker x:Name="DicePicker"
                    Grid.Row="0"
                    Grid.Column="1"
                    ItemsSource="{Binding DiceTypes}"
                    SelectedItem="{Binding SelectedDice}"
                    ItemDisplayBinding="{Binding Converter={StaticResource EnumDescriptionTranslationConverter}}"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    VerticalOptions="End" />

            <Button Text="Throw"
                    Grid.Row="0"
                    Grid.Column="2"
                    Command="{Binding RollCommand}"
                    HeightRequest="40"
                    FontSize="14"
                    VerticalOptions="End"
                    WidthRequest="100" />

            <HorizontalStackLayout Grid.Row="1" 
                                   Grid.Column="0" 
                                   Grid.ColumnSpan="3" 
                                   Spacing="16"
                                   IsVisible="{Binding IsCustomSelected}"
                                   HorizontalOptions="Center">

                <mc:NumericUpDownWithLabel Label="Min" Minimum="1" Maximum="10000" Value="{Binding CustomFrom}" WidthRequest="150" />
                <mc:NumericUpDownWithLabel Label="Max" Minimum="1" Maximum="10000" Value="{Binding CustomTo}"  WidthRequest="150" />

            </HorizontalStackLayout>
        </Grid>

        <ScrollView Grid.Row="1" Margin="20, 5">
            <StackLayout Spacing="4">
                <Label Text="Summary"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       FontSize="20" />
                <Label Text="{Binding ResultSummary}"
                       HorizontalOptions="Center"
                       FontSize="24"
                       FontAttributes="Bold" />

                <Label Text="Details"
                       FontAttributes="Bold"
                       Margin="0,12,0,0" />
                <Label Text="{Binding ResultDetails}"
                       LineBreakMode="WordWrap" />
            </StackLayout>
        </ScrollView>

        <Grid Grid.Row="2" VerticalOptions="End" HeightRequest="190">
            <Image x:Name="DiceImage" Source="dice.png" Aspect="AspectFit" />
        </Grid>
    </Grid>
</v:NotifierPage>