<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:v="clr-namespace:M.A.G.U.S.Assistant.Views"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:mc="clr-namespace:Mtf.Maui.Controls;assembly=Mtf.Maui.Controls"
                xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
                x:Class="M.A.G.U.S.Assistant.Views.RollFormulaPage"
                x:ClassModifier="internal"
                x:DataType="vm:RollFormulaViewModel"
                Title="Roll formula">

    <Grid RowDefinitions="Auto,*,Auto" Padding="16" RowSpacing="12">

        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="8" RowSpacing="8">
            <Label Text="Formula" VerticalOptions="Center" />
            <Label Grid.Column="1" Text="{Binding Formula}" VerticalOptions="Center" />

            <Label Grid.Row="1" Text="Modifier" VerticalOptions="Center" />
            <!-- EntryWithLabel assumed available in your project -->
            <mc:EntryWithLabel Grid.Row="1" Grid.Column="1"
                               Text="{Binding UserModifierString}"
                               IsVisible="{Binding IsUserInputMode}"
                               Placeholder="Enter modifier" WidthRequest="150" />

            <Button Grid.Row="1" Grid.Column="2"
                    Text="{Binding ActionButtonText}"
                    Command="{Binding ActionCommand}"
                    HeightRequest="40"
                    WidthRequest="120"/>
        </Grid>

        <ScrollView Grid.Row="1" Margin="0,10">
            <StackLayout Spacing="8">
                <Label Text="Summary" FontAttributes="Bold" HorizontalOptions="Center" FontSize="20" />
                <Label Text="{Binding ResultSummary}" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold" />
                <Label Text="Details" FontAttributes="Bold" Margin="0,12,0,0" />
                <Label Text="{Binding ResultDetails}" LineBreakMode="WordWrap" />
            </StackLayout>
        </ScrollView>

        <Grid Grid.Row="2" VerticalOptions="End" HeightRequest="140">
            <Image Source="dice.png" Aspect="AspectFit" HorizontalOptions="Fill" VerticalOptions="Fill" />
        </Grid>
    </Grid>
</v:NotifierPage>