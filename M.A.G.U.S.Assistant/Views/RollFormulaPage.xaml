<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:v="clr-namespace:M.A.G.U.S.Assistant.Views"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:mc="clr-namespace:Mtf.Maui.Controls;assembly=Mtf.Maui.Controls"
                xmlns:c="clr-namespace:Mtf.Maui.Controls.Converters;assembly=Mtf.Maui.Controls"
                xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
                x:Class="M.A.G.U.S.Assistant.Views.RollFormulaPage"
                x:ClassModifier="internal"
                x:DataType="vm:RollFormulaViewModel"
                Title="Roll formula">

    <v:NotifierPage.Resources>
        <ResourceDictionary>
            <c:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </v:NotifierPage.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="16" RowSpacing="12">

        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="8" RowSpacing="8">
            <Label Text="Formula" VerticalOptions="Center" />
            <Label Grid.Column="1" VerticalOptions="Center" Text="{Binding RollFormula.FullFormula}" />
            <Button Grid.Row="1" Grid.Column="1" Text="{Binding ActionButtonText}" Command="{Binding ActionCommand}"
                    HeightRequest="40" WidthRequest="120" IsEnabled="{Binding IsActionEnabled}" />
        </Grid>

        <ScrollView Grid.Row="1" Margin="0,10">
            <StackLayout Spacing="8">
                <Label Text="Summary" FontAttributes="Bold" HorizontalOptions="Center" FontSize="20" />

                <Label x:Name="ResultLabel" Text="" HorizontalOptions="Center" FontSize="24" FontAttributes="Bold" IsVisible="{Binding IsAuto}" />

                <Entry Text="{Binding UserResultString}" Keyboard="Numeric" Placeholder="Enter final result" HorizontalOptions="Center"
                       IsVisible="{Binding IsAuto, Converter={StaticResource InverseBooleanConverter}}" IsEnabled="{Binding IsActionEnabled}" />
                
            </StackLayout>
        </ScrollView>

        <Grid Grid.Row="2" VerticalOptions="End" HeightRequest="200">
            <Image x:Name="DiceImage" Source="dice.png" Aspect="AspectFit" HorizontalOptions="Fill" VerticalOptions="Fill" />
        </Grid>
    </Grid>
</v:NotifierPage>