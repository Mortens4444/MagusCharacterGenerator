<?xml version="1.0" encoding="utf-8" ?>
<v:NotifierPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:M.A.G.U.S.Assistant.Views"
    xmlns:vm="clr-namespace:M.A.G.U.S.Assistant.ViewModels"
    xmlns:mc="clr-namespace:Mtf.Maui.Controls;assembly=Mtf.Maui.Controls"
    x:Class="M.A.G.U.S.Assistant.Views.WebBrowserPage"
    x:DataType="vm:WebBrowserViewModel"
    Title="Böngésző">


    <v:NotifierPage.BindingContext>
        <vm:WebBrowserViewModel />
    </v:NotifierPage.BindingContext>


    <v:NotifierPage.Resources>
        <ResourceDictionary>
            <Style x:Key="BoxBorder" TargetType="Border">
                <Setter Property="StrokeShape" Value="{RoundRectangle CornerRadius=8}"/>
                <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray500}}"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"/>
            </Style>
        </ResourceDictionary>
    </v:NotifierPage.Resources>


    <VerticalStackLayout Spacing="8" Padding="10">


        <Grid ColumnDefinitions="*, Auto, Auto, Auto" ColumnSpacing="6" VerticalOptions="Start">
            <mc:EntryWithLabel Label="URL" Text="{Binding CurrentUrl}" HorizontalOptions="FillAndExpand" Grid.Column="0"/>


            <Button Text="Ugrás" Command="{Binding NavigateCommand}" Grid.Column="1"/>
            <Button Text="Frissít" Command="{Binding RefreshCommand}" Grid.Column="2"/>
            <Button Text="Külső" Command="{Binding OpenExternalCommand}" Grid.Column="3"/>
        </Grid>


        <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, *">
            <StackLayout Orientation="Horizontal" Spacing="6" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Start">
                <Button Text="&lt;" Command="{Binding GoBackCommand}" />
                <Button Text="&gt;" Command="{Binding GoForwardCommand}" />
                <Label Text="Betöltés:" VerticalOptions="Center"/>
                <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" VerticalOptions="Center"/>
            </StackLayout>


            <WebView x:Name="Browser" Source="{Binding CurrentUrl}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HeightRequest="800"/>
        </Grid>


    </VerticalStackLayout>


</v:NotifierPage>